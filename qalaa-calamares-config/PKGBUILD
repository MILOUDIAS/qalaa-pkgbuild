# Maintainer: Miloudi Adel Hani
pkgname=qalaa-calamares-config
_pkgname=qalaa-calamares-config
_destname="/etc"
pkgver=24.08
pkgrel=03
pkgdesc="calamares config for qalaalinux"
arch=('any')
url="https://github.com/MILOUDIAS/${_pkgname}"
license=('GPL3')
makedepends=('git')
depends=()
conflicts=('calamares-config' 'arconet-calamares-config')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+$url")
sha256sums=('SKIP')
install='readme.install'
package() {
	mkdir -p "${pkgdir}${_destname}"
	cp -r "${srcdir}/${_pkgname}/etc/"* "${pkgdir}${_destname}"
}
